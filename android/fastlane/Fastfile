# android/fastlane/Fastfile
default_platform(:android)

platform :android do
  
  # Lane สำหรับ develop branch
  lane :deploy_develop do
    gradle(
      task: "bundle",
      build_type: "Release"
    )
    
    upload_to_play_store(
      track: 'internal',
      json_key: "google-play-key.json",
      aab: "app/build/outputs/bundle/release/app-release.aab",
      release_status: 'completed',
      package_name: "test.cicd.appibc"
    )
    
    slack(
      message: "🚀 Android Development build deployed to Play Store Internal Testing!",
      channel: "#releases"
    ) if ENV["SLACK_URL"]
  end

  # Lane สำหรับ preprod branch  
  lane :deploy_preprod do
    gradle(
      task: "bundle",
      build_type: "Release"
    )
    
    upload_to_play_store(
      track: 'alpha',
      json_key: "google-play-key.json",
      aab: "app/build/outputs/bundle/release/app-release.aab",
      release_status: 'completed',
      package_name: "test.cicd.appibc"
    )
    
    slack(
      message: "🚀 Android Pre-production build deployed to Play Store Alpha!",
      channel: "#releases"
    ) if ENV["SLACK_URL"]
  end

  # Lane สำหรับ master branch (Production)
  lane :deploy_master do
    gradle(
      task: "bundle", 
      build_type: "Release"
    )
    
    upload_to_play_store(
      track: 'production',
      json_key: "google-play-key.json",
      aab: "app/build/outputs/bundle/release/app-release.aab",
      release_status: 'completed',
      rollout: '0.1', # เริ่มต้นด้วย 10% rollout
      package_name: "test.cicd.appibc"
    )
    
    slack(
      message: "🎉 Android Production build deployed to Play Store with 10% rollout!",
      channel: "#releases"
    ) if ENV["SLACK_URL"]
  end

  # Lane สำหรับ build เฉยๆ (ไม่ deploy)
  lane :build_only do
    gradle(
      task: "bundle",
      build_type: "Release"
    )
  end

  # Lane สำหรับ promote rollout (สำหรับ production)
  lane :promote_production do |options|
    percentage = options[:percentage] || 0.5
    
    upload_to_play_store(
      track: 'production',
      json_key: "google-play-key.json",
      rollout: percentage,
      skip_upload_aab: true,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true,
      package_name: "test.cicd.appibc"
    )
    
    slack(
      message: "📈 Android Production rollout increased to #{(percentage * 100).to_i}%!",
      channel: "#releases" 
    ) if ENV["SLACK_URL"]
  end

  # Error handling
  error do |lane, exception|
    slack(
      message: "❌ Android deployment failed in lane '#{lane}': #{exception.message}",
      channel: "#releases",
      success: false
    ) if ENV["SLACK_URL"]
  end
end