# android/fastlane/Fastfile
default_platform(:android)

platform :android do
  
  # Lane à¸ªà¸³à¸«à¸£à¸±à¸š develop branch
  lane :deploy_develop do
    gradle(
      task: "bundle",
      build_type: "Release"
    )
    
    upload_to_play_store(
      track: 'internal',
      json_key: "google-play-key.json",
      aab: "app/build/outputs/bundle/release/app-release.aab",
      release_status: 'completed',
      package_name: "test.cicd.appibc"
    )
    
    slack(
      message: "ğŸš€ Android Development build deployed to Play Store Internal Testing!",
      channel: "#releases"
    ) if ENV["SLACK_URL"]
  end

  # Lane à¸ªà¸³à¸«à¸£à¸±à¸š preprod branch  
  lane :deploy_preprod do
    gradle(
      task: "bundle",
      build_type: "Release"
    )
    
    upload_to_play_store(
      track: 'alpha',
      json_key: "google-play-key.json",
      aab: "app/build/outputs/bundle/release/app-release.aab",
      release_status: 'completed',
      package_name: "test.cicd.appibc"
    )
    
    slack(
      message: "ğŸš€ Android Pre-production build deployed to Play Store Alpha!",
      channel: "#releases"
    ) if ENV["SLACK_URL"]
  end

  # Lane à¸ªà¸³à¸«à¸£à¸±à¸š master branch (Production)
  lane :deploy_master do
    gradle(
      task: "bundle", 
      build_type: "Release"
    )
    
    upload_to_play_store(
      track: 'production',
      json_key: "google-play-key.json",
      aab: "app/build/outputs/bundle/release/app-release.aab",
      release_status: 'completed',
      rollout: '0.1', # à¹€à¸£à¸´à¹ˆà¸¡à¸•à¹‰à¸™à¸”à¹‰à¸§à¸¢ 10% rollout
      package_name: "test.cicd.appibc"
    )
    
    slack(
      message: "ğŸ‰ Android Production build deployed to Play Store with 10% rollout!",
      channel: "#releases"
    ) if ENV["SLACK_URL"]
  end

  # Lane à¸ªà¸³à¸«à¸£à¸±à¸š build à¹€à¸‰à¸¢à¹† (à¹„à¸¡à¹ˆ deploy)
  lane :build_only do
    gradle(
      task: "bundle",
      build_type: "Release"
    )
  end

  # Lane à¸ªà¸³à¸«à¸£à¸±à¸š promote rollout (à¸ªà¸³à¸«à¸£à¸±à¸š production)
  lane :promote_production do |options|
    percentage = options[:percentage] || 0.5
    
    upload_to_play_store(
      track: 'production',
      json_key: "google-play-key.json",
      rollout: percentage,
      skip_upload_aab: true,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true,
      package_name: "test.cicd.appibc"
    )
    
    slack(
      message: "ğŸ“ˆ Android Production rollout increased to #{(percentage * 100).to_i}%!",
      channel: "#releases" 
    ) if ENV["SLACK_URL"]
  end

  # Error handling
  error do |lane, exception|
    slack(
      message: "âŒ Android deployment failed in lane '#{lane}': #{exception.message}",
      channel: "#releases",
      success: false
    ) if ENV["SLACK_URL"]
  end
end